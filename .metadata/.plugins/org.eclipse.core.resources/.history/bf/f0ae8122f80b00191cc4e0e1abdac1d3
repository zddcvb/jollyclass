package com.jollyclass.airplayer.util
{
	import com.jollyclass.airplayer.constant.SwfKeyCode;

	public class KeyCodeSwitchUtils
	{
		public function KeyCodeSwitchUtils()
		{
		}
		/**
		 * 映射遥控器的按键键值，为小水滴课堂制定的键值映射
		 */
		public static function switchKeyCodeForJollyClass(keyCode:int):int
		{
			var code:int;
			switch(keyCode){
				case SwfKeyCode.ENTER_CODE:
					code=SwfKeyCode.ENTER_REFLECT_CODE;
					break;
				case SwfKeyCode.LEFT_CODE:
					code=SwfKeyCode.LEFT_REFLECT_CODE;
					break;
				case SwfKeyCode.RIGHT_CODE:
					code=SwfKeyCode.RIGHT_REFLECT_CODE;
					break;
				case SwfKeyCode.BACK_CODE:
				case SwfKeyCode.BACK_DEFAULT_CODE:
					code=SwfKeyCode.BACK_REFLECT_CODE;
					break;
				default:
					break;
			}
			return code;
		}
	}
	/**
	 * 将键值映射成普通键盘的键值，
	 * 左：37，上：38，右：39，下：40
	 */
	public static function switchKeyCodeForCommon(keyCode:int):int
	{
		var code:int;
		return code;
	}
}